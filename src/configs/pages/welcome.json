{
  "path": "/welcome",
  "pageKey": "landing",
  "hideWhen": "auth",
  "rows": [
    {
      "key": "teaserImage",
      "fullWidth": true,
      "columns": [
        {
          "key": "welcomeCol",
          "className": "w-100 p-0",
          "items": [
            {
              "itemKey": "welcomeCard",
              "className": "h-100 mb-3 mt-0 text-center",
              "config": {
                "type": "extension",
                "config": {
                    "type": "externalLinkCard",
                    "classBodyText": "",
                    "customClassTitle": "background-orange",
                    "variantTitle": "h2"
                },
                "showInfoText": false
              }
            }
          ]
        }
      ]
    },
    {
      "key": "content",
      "containerClassName": "min-vh-60",
      "columns": [
        {
          "key": "loginCardCol",
          "className": "col-12 col-lg-4 mb-lg-0",
          "items": [
            {
              "itemKey": "loginCard",
              "className": "h-100",
              "config": {
                "type": "loginCard",
                "showInfoText": true
              }
            }
          ]
        },
        {
          "key": "instructionsText",
          "className": "col-12 col-lg-8",
          "items": [
            {
              "itemKey": "instructionsCard",
              "className": "justify-p blue-titles",
              "config": {
                "type": "markdown",
                "markdownUrl": "/markdowns/instructions.md"
              }
            }
          ]
        },
        {
          "key": "aboutCardCol",
          "className": "h-100 col-12 col-lg-4 mt-3 mt-3 mb-3",
          "items": [
            {
              "itemKey": "aboutCard",
              "className": "h-100",
              "config": {
                "type": "extension",
                "config": {
                    "type": "externalLinkCard",
                    "externalLink": "https://www.grippenet.fr/fr/covidnet/",
                    "externalLinkTarget": "_self",
                    "imageSrc": "/images/about.jpg",
                    "showActionBtn": true
                }
              }
            }
          ]
        },
        {
          "key": "externalResultCol",
          "className": "col-12 col-lg-4 mt-3 mb-3",
          "items": [
            {
              "itemKey": "externalResultCard",
              "className": "h-100 card-transform",
              "config": {
                "type": "extension",
                "config": {
                    "type": "externalLinkCard",
                    "externalLink": "https://www.grippenet.fr/fr/resultats/",
                    "externalLinkTarget": "_self",
                    "imageSrc": "/images/results.jpg",
                    "markdownUrl": "/markdowns/external-results.md",
                    "showActionBtn": true
                }
              }
            }
          ]
        },
        {
          "key": "cardSignupCol",
          "className": "col-12 col-lg-4 mt-3 mb-3",
          "items": [
            {
              "itemKey": "signupCard",
              "className": "h-100",
              "config": {
                "type": "imageCard",
                "showActionBtn": true,
                "action": {
                  "type": "openDialog",
                  "value": "signup"
                },
                "imageSrc": "/images/participate.jpg"
              }
            }
          ]
        }
      ]
    },
    {
      "key": "logoCreditsRow",
      "containerClassName": "",
      "columns": [
        {
          "key": "cardLogoCredits",
          "className": "col-xs-12",
          "items": [
            {
              "itemKey": "logoCredits",
              "className": "",
              "config": {
                "type": "markdown",
                "markdownUrl": "markdowns/sponsors.md",
                "flavor": "chart-renderer"
              }
            }
          ]
        }
      ]
    }
  ]
}
